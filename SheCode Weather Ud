      function tempCity() {
        let city = prompt("What city do you live in?");
        let temp = prompt("What temperature is it?");
        let h1 = document.querySelector("h1");
        if (temp >= 60) {
          h1.innerHTML = "ðŸ˜‹  <br/> Currently " + temp + "Â°C in " + city;
